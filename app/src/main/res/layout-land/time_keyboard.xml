<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/timeKeyboard">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"        >

        <TableRow>
            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="\u00b1"
                android:textSize="25sp"
                android:id="@+id/buttonPlusMinus"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttonshape_digits"/>


            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="25sp"
                android:id="@+id/button7"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/buttonshape_digits"/>
            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="25sp"
                android:id="@+id/button8"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/buttonshape_digits"/>
            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="25sp"
                android:id="@+id/button9"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/buttonshape_digits"/>
            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="\u00f7"
                android:id="@+id/buttonDivide"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"/>


            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="\u2190"
                android:id="@+id/buttonBack"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:textSize="25sp"

                android:background="@drawable/buttonshape_digits"/>




        </TableRow>
        <TableRow>
            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="MC"
                android:id="@+id/buttonMC"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"/>

            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"
                android:id="@+id/button4"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>
            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"
                android:id="@+id/button5"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>
            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"
                android:id="@+id/button6"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>
            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="\u00d7"
                android:id="@+id/buttonTimes"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25sp"

                android:background="@drawable/buttonshape_digits"/>
            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CE"
                android:id="@+id/buttonCE"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"/>
            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="hr"
                android:id="@+id/buttonHr"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"/>


        </TableRow>
        <TableRow>

            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="M+"
                android:id="@+id/buttonMplus"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"/>

            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"
                android:id="@+id/button1"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>
            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"

                android:background="@drawable/buttonshape_digits"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25sp"/>
            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="25sp"
                android:id="@+id/button3"
                android:background="@drawable/buttonshape_digits"
                android:layout_gravity="center_horizontal"

                android:layout_weight="1"/>
            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/buttonMinus"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25sp"

                android:background="@drawable/buttonshape_digits"/>
            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="AC"
                android:id="@+id/buttonC"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25sp"

                android:background="@drawable/buttonshape_digits"/>

            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="min"
                android:id="@+id/buttonMin"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"      />



        </TableRow>
        <TableRow>
            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="MR"
                android:id="@+id/buttonMR"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"/>

            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:id="@+id/button0"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttonshape_digits"/>
            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/buttonPoint"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"/>
            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="next"
                android:id="@+id/buttonNext"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"/>

            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/buttonPlus"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"/>
            <Button
                android:textColor="#00BBFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/buttonEquals"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:layout_weight="1"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"/>
            <Button
                android:textColor="#FF5E00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="sec"
                android:id="@+id/buttonSec"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:background="@drawable/buttonshape_digits"/>
        </TableRow>

    </TableLayout>

</LinearLayout>